<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/multi_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_toolbar"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/btn_back_multiselected"
        style="@style/GeneralButtonStyle"
        android:layout_marginLeft="@dimen/margin_small_size"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/multi_toolbar"
        app:layout_constraintLeft_toLeftOf="@+id/multi_toolbar"
        app:layout_constraintTop_toTopOf="@+id/multi_toolbar" />

    <TextView
        android:id="@+id/tv_num_of_selected"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_small_size"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textSize="@dimen/font_size_standard"
        app:layout_constraintBottom_toBottomOf="@+id/multi_toolbar"
        app:layout_constraintLeft_toRightOf="@+id/btn_back_multiselected"
        app:layout_constraintRight_toLeftOf="@+id/btn_delete_multiselected"
        app:layout_constraintTop_toTopOf="@+id/multi_toolbar" />

    <ImageView
        android:id="@+id/btn_delete_multiselected"
        style="@style/GeneralButtonStyle"
        android:layout_marginRight="@dimen/margin_small_size"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@+id/multi_toolbar"
        app:layout_constraintRight_toLeftOf="@+id/btn_more_multiselected"
        app:layout_constraintTop_toTopOf="@+id/multi_toolbar" />

    <ImageView
        android:id="@+id/btn_more_multiselected"
        style="@style/GeneralButtonStyle"
        android:layout_marginRight="@dimen/margin_small_size"
        android:src="@drawable/ic_more"
        app:layout_constraintBottom_toBottomOf="@+id/multi_toolbar"
        app:layout_constraintRight_toRightOf="@+id/multi_toolbar"
        app:layout_constraintTop_toTopOf="@+id/multi_toolbar" />
</android.support.constraint.ConstraintLayout>

