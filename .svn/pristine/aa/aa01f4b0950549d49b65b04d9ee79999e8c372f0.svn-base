<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorSecondary">

        <RelativeLayout
            android:id="@+id/nav_bg_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_navigation"
            android:background="@color/colorAccent"
            android:gravity="center|bottom">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/icon_size_large"
                android:layout_height="@dimen/icon_size_large"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher" />

            <TextView
                style="@style/GeneralTextView"
                android:layout_below="@+id/iv_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_xsmall_size"
                android:text="@string/gallery"
                android:textSize="@dimen/font_size_huge" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/nav_bg_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_large"
            android:background="@color/colorAccent">

            <RelativeLayout
                android:id="@+id/btn_open_tab_photos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_label_photos"
                    style="@style/GeneralTextView"
                    android:layout_centerHorizontal="true"
                    android:text="@string/photo"
                    android:textColor="@color/tabUnselectedIconColor" />

                <TextView
                    android:id="@+id/tv_value_photos"
                    style="@style/GeneralTextView"
                    android:layout_below="@+id/tv_label_photos"
                    android:layout_centerHorizontal="true"
                    android:text="170" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_open_tab_videos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_label_videos"
                    style="@style/GeneralTextView"
                    android:layout_centerHorizontal="true"
                    android:text="@string/video"
                    android:textColor="@color/tabUnselectedIconColor" />

                <TextView
                    android:id="@+id/tv_value_videos"
                    style="@style/GeneralTextView"
                    android:layout_below="@+id/tv_label_videos"
                    android:layout_centerHorizontal="true"
                    android:text="170" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_open_tab_albums"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_label_albums"
                    style="@style/GeneralTextView"
                    android:layout_centerHorizontal="true"
                    android:text="@string/albums"
                    android:textColor="@color/tabUnselectedIconColor" />

                <TextView
                    android:id="@+id/tv_value_albums"
                    style="@style/GeneralTextView"
                    android:layout_below="@+id/tv_label_albums"
                    android:layout_centerHorizontal="true"
                    android:text="170" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_security"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_large"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                style="@style/GeneralButtonStyle"
                android:layout_marginLeft="@dimen/margin_large_size"
                android:layout_marginRight="@dimen/margin_large_size"
                android:src="@drawable/ic_security" />

            <TextView
                style="@style/GeneralTextView"
                android:text="@string/security" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_theme"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_large"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/GeneralButtonStyle"
                android:layout_marginLeft="@dimen/margin_large_size"
                android:layout_marginRight="@dimen/margin_large_size"
                android:src="@drawable/ic_theme" />

            <TextView
                style="@style/GeneralTextView"
                android:text="@string/theme" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/btn_set_default"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_large"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/GeneralButtonStyle"
                android:layout_marginLeft="@dimen/margin_large_size"
                android:layout_marginRight="@dimen/margin_large_size"
                android:src="@drawable/ic_gallery" />

            <TextView
                style="@style/GeneralTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/set_as_default_library" />

            <Switch
                android:id="@+id/switch_set_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="On"
                android:textOff="Off"
                android:checked="true"
                android:layout_marginRight="@dimen/margin_large_size"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_feedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_large"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/GeneralButtonStyle"
                android:layout_marginLeft="@dimen/margin_large_size"
                android:layout_marginRight="@dimen/margin_large_size"
                android:src="@drawable/ic_feedback" />

            <TextView
                style="@style/GeneralTextView"
                android:text="@string/feedback" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_rate_app"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_large"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/GeneralButtonStyle"
                android:layout_marginLeft="@dimen/margin_large_size"
                android:layout_marginRight="@dimen/margin_large_size"
                android:src="@drawable/ic_rate_app" />

            <TextView
                style="@style/GeneralTextView"
                android:text="@string/rate_app" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_share_app"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_large"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/GeneralButtonStyle"
                android:layout_marginLeft="@dimen/margin_large_size"
                android:layout_marginRight="@dimen/margin_large_size"
                android:src="@drawable/ic_share" />

            <TextView
                style="@style/GeneralTextView"
                android:text="@string/share_app" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_large"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/GeneralButtonStyle"
                android:layout_marginLeft="@dimen/margin_large_size"
                android:layout_marginRight="@dimen/margin_large_size"
                android:src="@drawable/ic_version" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    style="@style/GeneralTextView"
                    android:text="@string/version" />

                <TextView
                    android:id="@+id/tv_version"
                    style="@style/GeneralTextView"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_size_normal"
                    android:text="@string/version" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>