<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_xxsmall_size"
    android:paddingRight="@dimen/margin_xxsmall_size">

    <ImageView
        android:id="@+id/iv_first_of_album"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/view_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_standard"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTransparent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_xsmall_size"
            android:paddingRight="@dimen/margin_xsmall_size">

            <TextView
                android:id="@+id/tv_name_album"
                style="@style/GeneralTextView"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/margin_xsmall_size"
                android:layout_weight="1"
                android:singleLine="true"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:id="@+id/tv_size_album"
                style="@style/GeneralTextView"
                android:singleLine="true"
                android:textSize="@dimen/font_size_small" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/view_tick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTransparent">

        <ImageView
            android:id="@+id/iv_ticked"
            android:layout_width="@dimen/font_size_xlarge"
            android:layout_height="@dimen/font_size_xlarge"
            android:scaleType="fitXY"
            android:src="@drawable/ic_btn_tick" />
    </FrameLayout>
</FrameLayout>