<resources>

    <style name="GeneralTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size_standard</item>
    </style>

    <style name="GeneralButtonStyle">
        <item name="android:layout_width">@dimen/icon_size_standard</item>
        <item name="android:layout_height">@dimen/icon_size_standard</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">@dimen/margin_small_size</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="AppCompatAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@android:color/black</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="textColorAlertDialogListItem">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="MyDiscreteSeekBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
