<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main_filter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app">

    <RelativeLayout
        android:layout_height="@dimen/_65sdp"
        android:id="@+id/topbar_filter"
        android:layout_width="match_parent"
        android:background="@color/bg_app"
        android:visibility="visible">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/btn_filter_exit"
            style="@style/GeneralButtonStyle"
            android:layout_marginLeft="@dimen/margin_small_size"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/btn_filter_exit"
            android:layout_toStartOf="@+id/btn_filter_save"
            android:textColor="@color/white"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small_size"
            android:gravity="center_vertical"
            android:text="@string/edit"
            android:textSize="@dimen/_13ssp"
            android:layout_toRightOf="@+id/btn_filter_exit"
            android:layout_toLeftOf="@+id/btn_filter_save" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/btn_filter_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true">

            <TextView
                android:layout_marginRight="@dimen/_10sdp"
                style="@style/TextViewSave"
                android:gravity="center_vertical"
                android:textSize="@dimen/_13ssp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="@string/save"
                android:id="@+id/btn_done"
                android:layout_marginEnd="@dimen/_10sdp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>


    <FrameLayout
        android:id="@+id/container_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar_filter">
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottombar"
        android:layout_below="@+id/container_filter"
        android:layout_centerInParent="true"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <bsoft.com.lib_filter.filter.indicators.AVLoadingIndicatorView
            style="@style/AVLoadingIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            app:indicatorColor="#f51c14"
            app:indicatorName="BallPulseIndicator" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/filter_color_bottom_menu"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            ads:layout_constraintTop_toTopOf="parent"
            ads:layout_constraintEnd_toEndOf="parent"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintStart_toStartOf="parent"
            android:id="@+id/recycle_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
