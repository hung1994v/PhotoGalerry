<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_bottom_menu"
    android:layout_gravity="bottom"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp">

        <ImageView
            android:id="@+id/btn_font_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ic_txt_collage"
            android:padding="@dimen/_10sdp"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_margin="@dimen/_18sdp"/>

        <ImageView
            android:id="@+id/btn_color_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ic_color_txt"
            android:padding="@dimen/_6sdp"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_margin="@dimen/_22sdp"/>

        <ImageView
            android:id="@+id/btn_edit_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ic_edit_txt"
            android:padding="@dimen/_10sdp"
            android:layout_margin="@dimen/_18sdp"
            android:background="?selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/btn_save_edit_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/_9sdp"
            android:src="@drawable/ic_save"
            android:layout_margin="@dimen/_18sdp"/>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
