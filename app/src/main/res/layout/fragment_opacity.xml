<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottombar_opacity_sticker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@color/color_bottom_menu"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_opacity"
        android:layout_width="0dp"
        android:layout_height="77dp"
        android:layout_weight="2.5"
        android:gravity="center"
        android:padding="@dimen/xx_small"
        android:text="@string/opacity"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_size_small" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekbar_opacity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/square_bottomba"
        android:layout_marginRight="@dimen/small"
        android:layout_weight="7.5" />
</LinearLayout>
