<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_80sdp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view_item_crop"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/stroke_item_ratio_default"
        android:layout_margin="@dimen/_5sdp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/ic_avatar"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/ic_instagram_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_ratio"
            app:layout_constraintBottom_toTopOf="@+id/txt_name_ratio"/>

        <TextView
            android:id="@+id/txt_name_ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1:1"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/ic_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/_8ssp"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_2sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>