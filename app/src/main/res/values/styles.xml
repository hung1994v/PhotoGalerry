<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#121212</item>
        <item name="colorPrimaryDark">#121212</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/white</item>
        <item name="actionModeCloseDrawable">@drawable/ic_back</item>
    </style>

    <style name="MyDialogThemeWhite" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorTertiary">@android:color/black</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/color_blue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextViewSave">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/save</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_txt_save</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/_15sdp</item>
        <item name="android:paddingRight">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
    </style>

    <style name="GeneralTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="GeneralButtonStyle">
        <item name="android:layout_width">@dimen/icon_size_standard</item>
        <item name="android:layout_height">@dimen/icon_size_standard</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">@dimen/margin_small_size</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="DialogTheme">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>

    <style name="CommonTextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:maxLines">10</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyDiscreteSeekBar" parent="Widget.DiscreteSeekBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="dsb_indicatorColor">@color/colorAccent</item>
        <item name="dsb_indicatorTextAppearance">@color/colorAccent</item>
        <item name="dsb_progressColor">@color/colorAccent</item>
        <item name="dsb_rippleColor">@color/colorAccent</item>
    </style>


    <style name="StyleIconButtonMenu">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
    </style>

    <style name="StyleTextButtonMenu">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
    </style>

    <style name="StyleButtonMenu">
        <item name="android:paddingTop">@dimen/_25sdp</item>
        <item name="android:paddingBottom">@dimen/_15sdp</item>
    </style>


</resources>
