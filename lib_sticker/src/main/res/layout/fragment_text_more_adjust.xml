<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_normal_size">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/GeneralTextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/text_size"
            android:clickable="false"/>

        <SeekBar
            android:id="@+id/sb_size_text"
            style="@style/MyDiscreteSeekBar"
            android:layout_width="0dp"
            android:layout_weight="4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/GeneralTextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/padding_size"
            android:clickable="false"/>

        <SeekBar
            android:id="@+id/sb_padding_text"
            style="@style/MyDiscreteSeekBar"
            android:layout_width="0dp"
            android:layout_weight="4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/GeneralTextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/text_alignment"
            android:clickable="false"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:padding="@dimen/margin_normal_size">

            <ImageView
                android:id="@+id/ic_left_alignment"
                style="@style/GeneralButtonStyle"
                android:scaleType="fitCenter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_left_alignment" />

            <ImageView
                android:id="@+id/ic_center_alignment"
                style="@style/GeneralButtonStyle"
                android:scaleType="fitCenter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_central_align" />

            <ImageView
                android:id="@+id/ic_right_alignment"
                style="@style/GeneralButtonStyle"
                android:scaleType="fitCenter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_right_alignment" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
