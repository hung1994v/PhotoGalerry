<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="GeneralTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size_standard</item>
    </style>

    <style name="GeneralButtonStyle">
        <item name="android:layout_width">@dimen/icon_size_standard</item>
        <item name="android:layout_height">@dimen/icon_size_standard</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">@dimen/small</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="MyDiscreteSeekBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint" tools:targetApi="lollipop">#ddd</item>
        <item name="android:progressTint" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:thumbTint" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>
</resources>
